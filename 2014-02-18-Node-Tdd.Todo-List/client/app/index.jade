doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Todo List
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Todo List

    .row#forms
      .small-12.columns
        form#todo
          fieldset
            legend Todo Info
            .row
              .small-12.columns
                .small-4.columns
                  label Complete?
                  input(type="checkbox", name="completed", checked=(true===false ? "checked" : undefined))
                .small-4.columns
                  label Name
                  input(type="text", placeholder="name", name="name")#name
                .small-4.columns
                  label Due Date
                  input(type="text", placeholder="January, 1, 2014", name="date")#date

              .small-12.columns
                .small-4.columns
                  label Priority
                  select(type="text" placeholder="priority", name="priority")#priority-drop-down
                .small-4.columns
                  label Tags
                  input(type="text", placeholder="tags", name="tags")#tags

                  input(type="hidden", name="id")#todoid
                 .small-4.columns
                 button.tiny.radius#save-todo Save Todo

    .row
      .small-12.columns.centered
        table#todos
          thead
            tr
              th Complete?
              th Name
              th Due Date
              th Priority
              th Tags
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

