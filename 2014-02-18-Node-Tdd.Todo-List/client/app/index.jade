doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Todo List
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Todo List

    .row#forms
      .small-6.columns
        form#priority
          fieldset
            legend Priority Info
            .row
              .small-4.columns
                label Name
                input(type="text", placeholder="name", name="name")#name
              .small-4.columns
                label Value
                input(type="text", placeholder="value", name="value")#value

                input(type="hidden", name="id")#priorityid
              .small-4.columns
                button.tiny.radius#save-priority Save Priority

    .row
      .small-12.columns.centered
        table#priorities
          thead
            tr
              th Name
              th Value
              th Delete
              th ---
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

