extends ../shared/template

block content
  .row
    .small-12.columns.space
      a.button.medium.radius(href="/notes/new")#create-note Create Note

  .row
    .small-12.columns.space
      each note in notes
        .note
          a(href='/notes/' + note._id)= note.title
          .body= note.body
          .dateCreated= moment(note.dateCreated).format('MMMM Do, YYY')
          .tags= note.tags

