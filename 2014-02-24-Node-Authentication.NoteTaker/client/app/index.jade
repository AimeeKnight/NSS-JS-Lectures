doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Note Taker
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Note Taker

    .row
      .small-12.columns
        button#login Register/Login

    .row#user-form
      .small-12.columns
        form#user
          fieldset
            legend User Login
            .row
              .small-4.columns
                label Email
                input(type="text", placeholder="email", name="email")#email
              .small-4.columns
                label Password
                input(type="password", placeholder="password", name="password")#password
              .small-2.columns
                button.small.radius#register Register
              .small-2.columns
                button.small.radius#login Login


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

