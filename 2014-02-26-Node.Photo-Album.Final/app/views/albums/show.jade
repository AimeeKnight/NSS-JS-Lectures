doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .panel
          h1=title
    .row
      .small-12.columns
        a.button.tiny.radius(href='/albums/new')#add-album New Album
     
    .row
      .small-12.columns
        form(action="/albums/"+ album._id, method="post", enctype="multipart/form-data")
          fieldset
            legend= title
            .row
              .small-4.columns
                label Cover Image
                input(type="file", name="cover")#cover

    .row
      .small-12.columns
        .small-6.columns
          .album
            .cover(style='background-image:url("' + album.cover +'")')
            .title= album.title
            .taken= moment(album.taken).format('MMM Do, YYYY')

      script(src='/js/vendor/jquery.js')
      script(src='/js/vendor/foundation.js')
      script(src='/js/vendor/lodash.js')
      script(src='/js/vendor/moment.js')
      script(src='/js/source/main.js')

