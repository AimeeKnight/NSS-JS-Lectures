doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Node Mongo Movies
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Node Mongo Movies

    .row
      .small-12.columns
        form#movie
          fieldset
            legend Movie Info
            .row
              .small-4.columns 
                label Name
                input(type="text", placeholder="name", name="name")#name
              .small-4.columns 
                label Rating
                input(type="text", placeholder="rating", name="rating")#rating
              .small-4.columns 
                label Length
                input(type="text", placeholder="length", name="length")#length
            .row
              .small-4.columns 
                label Year
                input(type="text", placeholder="year", name="year")#year
              .small-8.columns 
                label Studio
                input(type="text", placeholder="studio", name="studio")#studio
            .row
              .small-8.columns 
                label Actors
                input(type="text", placeholder="actors", name="actors")#actors
              .small-4.columns 
                label Director
                input(type="text", placeholder="director", name="director")#director
            .row
              .small-8.columns 
                label Poster
                input(type="text", placeholder="poster url", name="poster")#poster
              .small-4.columns
                button.small.radius#save-movie Save Movie

    .row
      .small-12.columns
        table#movies
          thead
            tr#head
              th Name
              th Rating
              th Length
              th Year
              th Studio
              th Director
              th Actors
              th Poster
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')

