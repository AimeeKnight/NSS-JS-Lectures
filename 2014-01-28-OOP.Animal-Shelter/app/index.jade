doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .panel
          h1 Animal Shelter

    .row
      .small-12.columns
        form
          fieldset
            legend Animal Info
            .row
              .small-4.columns
                label Species
                input(type="text", placeholder="Species")#species
              .small-4.columns
                label Color
                input(type="text", placeholder="Color")#color
              .small-4.columns
                label Name
                input(type="text", placeholder="Name")#name

            .row
              .small-4.columns
                label Age
                input(type="text", placeholder="Age")#age
              .small-4.column#gender
                label Gender
                input(type="radio", name="gender", value="male", id="male")
                label(for="male") Male
                input(type="radio", name="gender", value="female", id="female")
                label(for="female") Female
              .small-4.columns
                .row.collapse
                  label Photo
                  .small-3.columns
                    span.prefix http://
                  .small-9.columns
                    input(type="text", placeholder="URL")#url

            .row
              .small-4.columns.right
                button.tiny.right.radius#add-img Add Image

            .row
              .small-12.columns#imgs

            .row
              .small-12.columns
                label Description
                textarea(placeholder="Description")#description

            .row
              .small-4.columns
                button.medium.radius#add-animal Add Animal

    .row
      .small-12-.small-centered.columns
        table#animalTable.small-12.small-centered.columns
          thead
            tr
              td Species
              td Color
              td Name
              td Age
              td Gender
              td Description
              td Photos
              td
          tfoot
          tbody
            tr


    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/animal.js')
    script(src='/js/source/animalFactory.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

