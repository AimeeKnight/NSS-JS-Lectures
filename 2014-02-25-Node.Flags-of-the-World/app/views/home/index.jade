doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/flags.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title

    .row
      .small-12.columns
        .small-6.columns
          each f in flags
            .flag(class='flag-' + f.flag)
        .small-6.columns
          each f in shuffledFlags
            h5.country= f.country

    .row
      .small-12.columns
        .small-3.columns
          h5#flag-code
        .small-3.columns
          h5#country-name
        .small-3.columns
          button.small#match Match?
        .small-3.columns
          h5#timer

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

