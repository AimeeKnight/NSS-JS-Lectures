doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/flags.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title

    .row
      .small-12.columns
        .small-6.columns
          h5 Country Name
          p#country-name ____________________
        .small-6.columns
          h5 Time Remaining
          p#timer 120

    .row
      .small-12.columns
        .panel.radius
          .small-4.columns
            each f in flags
              .flag(class='flag-' + f.flag)
          .small-4.columns
            each f in shuffledFlags
              h5.country= f.country
          .small-4.columns
            button.small.radius#match Match?
          .clear

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

